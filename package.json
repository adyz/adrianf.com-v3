{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "postinstall": "remix setup node",
    "dev:netlify": "cross-env NODE_ENV=development netlify dev",
    "dev:css": "postcss styles --base styles --dir app/styles_dist/ -w",
    "build:css": "postcss styles --base styles --dir app/styles_dist --env production",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\""
  },
  "dependencies": {
    "@netlify/functions": "^0.7.2",
    "@react-spring/web": "^9.3.1",
    "@remix-run/netlify": "^1.0.4",
    "@remix-run/react": "^1.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^7.1.0",
    "react-on-screen": "^2.1.1",
    "react-spring": "^9.3.1",
    "react-use-gesture": "^9.1.3",
    "remix": "^1.0.4",
    "use-sound": "^4.0.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.4",
    "@remix-run/serve": "^1.0.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.12",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2",
    "tailwindcss": "^2.2.19",
